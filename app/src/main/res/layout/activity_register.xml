<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/register_app_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/FunctionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_app_logo"
        android:text="Tạo tài khoản"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/check_Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FunctionName"
        android:layout_marginTop="16dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="300dp">

        <EditText
            android:id="@+id/register_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_app_logo"
            android:padding="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="Tên tài khoản"
            android:inputType="text"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/check_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_Username"
        android:layout_marginTop="14dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="300dp">

        <EditText
            android:id="@+id/register_phone_number_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_username_input"
            android:padding="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="Số điện thoại"
            android:inputType="number"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/check_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_Phone"
        android:layout_marginTop="14dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="300dp">

        <EditText
            android:id="@+id/register_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_phone_number_input"
            android:padding="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_Password"
        android:layout_marginStart="400dp"
        android:layout_marginEnd="400dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:padding="17dp"
        android:text="Tạo tài khoản mới"/>
</RelativeLayout>