<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLogo2"
        android:layout_width="1200dp"
        android:layout_height="541dp"
        android:background="@drawable/nen"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView3"
        android:layout_width="900dp"
        android:layout_height="535dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/khung"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1200dp"
        android:layout_height="433dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/nenkfc"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/login_app_logo"
        android:layout_width="303dp"
        android:layout_height="100dp"
        android:src="@drawable/kfc1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/login_app_name"/>
    <TextView
        android:id="@+id/login_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Đăng Nhập"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:textStyle="bold"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/check_Username_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_app_logo"
        android:layout_marginTop="16dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="300dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_username_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="Tên tài khoản"
            android:textSize="24sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/user_icon"
            android:drawablePadding="8dp"
            android:padding="18dp"
            >

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/check_Password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_Username_login"
        android:layout_marginTop="16dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="300dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_password_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:textSize="24sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="8dp"
            android:padding="18dp">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_Password_login"
        android:layout_marginStart="400dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="400dp"
        android:layout_marginBottom="50dp"
        android:padding="17dp"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/admin_panel_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/login"
        android:textSize="24sp"
        android:layout_marginRight="310dp"
        android:layout_marginBottom="150dp"/>

    <TextView
        android:id="@+id/not_admin_panel_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhân sự"
        android:layout_alignParentStart="true"
        android:layout_below="@id/login"
        android:textSize="24sp"
        android:layout_marginLeft="310dp"/>

</RelativeLayout>