<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/login_app_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/check_Username_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_app_logo"
        android:layout_marginTop="16dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="300dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_username_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="Tên tài khoản"
            android:textSize="18sp"
            android:textStyle="bold">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/check_Password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_Username_login"
        android:layout_marginTop="16dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="300dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_password_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:textStyle="bold">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_Password_login"
        android:layout_marginStart="400dp"
        android:layout_marginEnd="400dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:padding="17dp"
        android:text="Đăng nhập"/>

    <TextView
        android:id="@+id/admin_panel_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/login"
        android:textSize="20sp"
        android:layout_marginRight="310dp"
        android:layout_marginBottom="150dp"/>

    <TextView
        android:id="@+id/not_admin_panel_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhân sự"
        android:layout_alignParentStart="true"
        android:layout_below="@id/login"
        android:textSize="20sp"
        android:layout_marginLeft="310dp"/>

</RelativeLayout>