<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Nudes"
    tools:context=".CartActivity">

    <RelativeLayout
        android:id="@+id/rll1"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/nen_2">

        <TextView
            android:id="@+id/total_price"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="479dp"
            android:text="Giỏ hàng "
            android:textAlignment="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="116dp"
            android:layout_height="105dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="1079dp"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/kfc1" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-9dp"
            android:layout_marginEnd="-122dp"
            app:srcCompat="@drawable/combo_icon" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="1071dp"
        android:layout_height="595dp"
        android:layout_below="@id/rll1"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bogocbutton_2"
        android:backgroundTint="@color/white">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bogocbutton"
        android:backgroundTint="@color/red"
        android:text="Next"
        android:textSize="20dp" />

</RelativeLayout>
