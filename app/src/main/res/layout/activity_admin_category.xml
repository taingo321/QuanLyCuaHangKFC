<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Thêm sản phẩm"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/chickens"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/fried_chicken_icon"/>

        <ImageView
            android:id="@+id/burgers_rices_spaghetties"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/burger_icon"/>

        <ImageView
            android:id="@+id/snacks"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/snack_icon"/>

        <ImageView
            android:id="@+id/drinks_deserts"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/drinks_icon"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/speacial_offers"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/special_offers_icon"/>

        <ImageView
            android:id="@+id/brand_new"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/brand_new_icon"/>

        <ImageView
            android:id="@+id/combos"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/combo_icon"/>
    </LinearLayout>

    <Button
        android:id="@+id/check_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Kiểm tra hóa đơn"
        android:textSize="20sp"/>

</RelativeLayout>